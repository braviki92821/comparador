                            if (procesadores[1].valor + graficas[1].valor + memoriasRam[1].valor + almacenamiento[1].valor + baterias[1].valor + interfaces[1].valor) > (procesadores[0].valor + graficas[0].valor + memoriasRam[0].valor + almacenamiento[0].valor + baterias[0].valor + interfaces[0].valor)
