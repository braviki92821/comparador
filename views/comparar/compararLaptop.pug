extends ../layout/app

block styles
    meta(name="csrf-token" content=csrfToken)

block contenido
    div.py-10
        h2.text-center.text-2xl.font-extrabold= pagina
        //-pre= JSON.stringify(memoriasRam, undefinded ,2)
        div(class="grid grid-cols-1 lg:grid-cols-2 gap-5 mt-8")
             each producto in laptops
                    div(class="bg-white shadow rounded-lg border border-black")
                        img(class=" h-72 w-full" src=`/uploads/${producto.imagen}` alt=`${producto.imagen}`)
                        div(class="p-5 space-y-3")
                            h3(class="text-2xl font-bold")= producto.nombre
                            p(class="text-sm text-gray-600") Precio: 
                                if producto.oferta
                                    del(class="text-gray-800 font-bold")= `$${producto.precio} `
                                    span(class="text-gray-800 font-bold")= ` / $${(producto.precio - (producto.precio / 100 )* producto.descuento)}`
                                else
                                    span(class="text-gray-800 font-bold")= `$${producto.precio}`
                                p(class="text-sm text-gray-600") Tienda: 
                                    span(class="text-gray-800 font-bold")= producto.tienda.nombre  
        h2.text-center.text-2xl.font-extrabold.mt-5 Resultados            
        div(class="border border-t-slate-950 grid grid-cols-1 lg:grid-cols-2 gap-5 mt-8")
                div(class="bg-white border border-x-gray-950 mt-5")
                    div(class="p-5 space-y-3")
                        h3(class="text-2xl font-bold") Caracteristicas
                        p(class="text-sm text-gray-600") Procesador:     
                            span(class="text-black font-bold")= laptops[0].procesador
                            span(class="text-black font-bold")=` / Puntos: ${procesadores[0].valor}`
                        p(class="text-sm text-gray-600") Grafica: 
                            span(class="text-black font-bold")= laptops[0].grafica
                            span(class="text-black font-bold")=` / Puntos: ${graficas[0].valor}`
                        p(class="text-sm text-gray-600") Memoria Ram: 
                            span(class="text-black font-bold")= laptops[0].memoriaRam
                            span(class="text-black font-bold")=` / Puntos: ${memoriasRam[0].valor}`
                        p(class="text-sm text-gray-600") Almacenamiento: 
                            span(class="text-black font-bold")= laptops[0].almacenamiento
                            span(class="text-black font-bold")=` / Puntos: ${almacenamiento[0].valor}`
                        p(class="text-sm text-gray-600") Bateria: 
                            span(class="text-black font-bold")= laptops[0].bateria
                            span(class="text-black font-bold")=` / Puntos: ${baterias[0].valor}`
                        p(class="text-sm text-gray-600") Interfaz: 
                            span(class="text-black font-bold")= laptops[0].interfaz
                            span(class="text-black font-bold")=` / Puntos: ${interfaces[0].valor}`
                        p(class="text-sm text-gray-600") Sistema Operativo: 
                            span(class="text-black font-bold")= laptops[0].sistemaOperativo.nombre
                        p(class="text-sm text-gray-600") Puntos Totales: 
                            span(class="text-black font-bold")=` ${(procesadores[0].valor + graficas[0].valor + memoriasRam[0].valor + almacenamiento[0].valor + baterias[0].valor + interfaces[0].valor)}` 
                            if (procesadores[0].valor + graficas[0].valor + memoriasRam[0].valor + almacenamiento[0].valor + baterias[0].valor + interfaces[0].valor) > (procesadores[1].valor + graficas[1].valor + memoriasRam[1].valor + almacenamiento[1].valor + baterias[1].valor + interfaces[1].valor)
                                p(class="text-black font-bold") Ganador
                            else
                                p(class="text-black font-bold") Perdedor
                div(class="bg-white border border-x-gray-950 mt-5")
                        div(class="p-5 space-y-3")
                            h3(class="text-2xl font-bold") Caracteristicas
                            p(class="text-sm text-gray-600") Procesador:     
