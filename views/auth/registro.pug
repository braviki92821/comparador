extends ../layout/index

block contenido
    section(class="h-screen bg-slate-300 rounded-lg shadow-lg")
      div(class="h-full")
        div(class="g-6 flex h-full flex-wrap items-center  lg:justify-center border border-collapse  ")
            div(class="shrink-1 mb-12 grow-0 basis-auto md:mb-0 md:w-9/12 md:shrink-0 lg:w-6/12 xl:w-6/12 mr-8")
                img(src="/img/cabecera-comparadores.jpg" class="w-full h-3/4" alt="Sample image")
            div(class="mb-12 md:mb-0 md:w-8/12 lg:w-5/12 xl:w-5/12 items-center")
                h1.text-4xl.ny-10-font-extrabold.text-center Bienvenido al 
                    span.font-normal Comparador
                h2.text-center.text-2xl.font-extrabold.mt-4= pagina
                if errores
                    div(class="max-w-md mx-auto my-10")
                        each error in errores
                            p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
                form(method="POST" action="/auth/registro")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div(class="relative mb-6")
                         label.block.text-sm.uppercase.text-black.mb-2.font-bold(for="nombre") Tu Nombre
                         input#nombre.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder="Tu nombre" type="text" name="nombre" value=usuario ? usuario.nombre : '')
                    div(class="relative mb-6" data-te-input-wrapper-init)
                         label.block.text-sm.uppercase.text-black.mb-2.font-bold(for="email") Email de Registro
                         input#email.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email" value=usuario ? usuario.email : '')
                    div(class="relative mb-6" data-te-input-wrapper-init)
                         label.block.text-sm.uppercase.text-black.mb-2.font-bold(for="password") Password
                         input#password.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder="Tu password" type="password" name="password")
                    div(class="relative mb-6" data-te-input-wrapper-init)
                         label.block.text-sm.uppercase.text-black.mb-2.font-bold(for="repetir_password") Repetir Password
                         input#repetir_password.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder="Repetir password" type="password" name="repetir_password")                  
                    div(class="mb-6 flex items-center justify-between")
                        a.text-black.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                    div(class="text-center lg:text-left")
                        input(type="submit" class="inline-block rounded bg-indigo-600 hover:bg-indigo-700 px-7 pb-2.5 pt-3 text-sm font-medium uppercase leading-normal text-white shadow-[0_4px_9px_-4px_#3b71ca] transition duration-150 ease-in-out hover:bg-primary-600 hover:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] focus:bg-primary-600 focus:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] focus:outline-none focus:ring-0 active:bg-primary-700 active:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] dark:shadow-[0_4px_9px_-4px_rgba(59,113,202,0.5)] dark:hover:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.2),0_4px_18px_0_rgba(59,113,202,0.1)] dark:focus:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.2),0_4px_18px_0_rgba(59,113,202,0.1)] dark:active:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.2),0_4px_18px_0_rgba(59,113,202,0.1)]"  data-te-ripple-ini  data-te-ripple-color="light" value="Crear Cuenta")
