extends ../layout/admin

block contenido
    div.py-10 
        h2.text-center.text-2xl.font-extrabold= pagina  

        //-pre= JSON.stringify(datos, undefined, 2)

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                     p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
           form.space-y-8(method="POST")     
               input(type="hidden" name="_csrf" value=csrfToken)
               div.space-y-5
                   h3.text-lg.leading-6.font-medium.text-gray-900 Informacion General
                   div
                       label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Nombre Telefono
                       input#nombre.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder="Laptop Dell ryzen 5 GB ram" type="text" name="nombre" value= datos.nombre ? datos.nombre : '')

                   div
                       label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="precio") Precio
                       input#precio.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400( type="number" name="precio" value= datos.precio ? datos.precio : '')
                    
                   div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                         div(class="md:w-1/2 ")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="oferta") Oferta
                            select#oferta.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400.data-te-select-init.data-te-select-filter(name="oferta")
                             option(value="") - Seleccione -
                             option(value="0" selected= datos.oferta == false ? true : false : null) Sin oferta
                             option(value="1" selected= datos.oferta == true ? true : false : null)  Poner en oferta
                         div(class="md:w-1/2 ")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="descuento") Descuento
                            select#descuento.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400.data-te-select-init.data-te-select-filter(name="descuento")
                             option(value="") - Seleccione -
                             option(value='0' selected= datos.descuento == 0 ? true : false : null) 0%
                             option(value="5" selected= datos.descuento == 5 ? true : false : null) 5%
                             option(value="10" selected= datos.descuento == 10 ? true : false : null) 10%
                             option(value="15" selected= datos.descuento == 15 ? true : false : null) 15%
                             option(value="20" selected= datos.descuento == 20 ? true : false : null) 25%
                             option(value="25" selected= datos.descuento == 25 ? true : false : null) 25%
                             option(value="30" selected= datos.descuento == 30 ? true : false : null) 30%
                             option(value="35" selected= datos.descuento == 35 ? true : false : null) 35%
                             option(value="40" selected= datos.descuento == 40 ? true : false : null) 40%
                             option(value="45" selected= datos.descuento == 45 ? true : false : null) 45%
                   div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/3 ")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="procesador") Procesador
                            select#procesador.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400.data-te-select-init.data-te-select-filter(name="procesador")
                             option(value="") - Seleccione -
                             each procesador in procesadores
                                option(value=procesador.nombre selected= datos.procesador ? datos.procesador == procesador.nombre ? true : false : null)= procesador.nombre

                        div(class="md:w-1/3 ")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="camaraF") Camara Frontal
                            select#camaraF.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(name="camaraF")
                             option(value="") - Seleccione -
                             each camaraF in camarasF
                                option(value=camaraF.nombre selected= datos.camaraF? datos.camaraF == camaraF.nombre ? true : false : null)= camaraF.nombre

                        div(class="md:w-1/3 ")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="camaraT") Camara Trasera
                            select#camaraT.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(name="camaraT")
                             option(value="") - Seleccione -
                             each camaraT in camarasT
                                option(value=camaraT.nombre selected= datos.camaraT ? datos.camaraT == camaraT.nombre ? true : false : null)= camaraT.nombre
            
                   div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/3 ")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="memoriaRam") Memoria Ram
                            select#memoriaRam.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(name="memoriaRam")
                             option(value="") - Seleccione -
                             each memoriaRam in memoriasRam
                                option(value=memoriaRam.nombre selected= datos.memoriaRam ? datos.memoriaRam == memoriaRam.nombre ? true : false : null)= memoriaRam.nombre
                        div(class="md:w-1/3 ")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="almacenamiento") Almacenamiento
                            select#almacenamiento.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(name="almacenamiento")
                             option(value="") - Seleccione
                             each almacenamiento in almacenamientos
                                option(value=almacenamiento.nombre selected= datos.almacenamiento ? datos.almacenamiento == almacenamiento.nombre ? true : false : null)= almacenamiento.nombre                    
                        div(class="md:w-1/3 ")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="bateria") Bateria en MAH
                            select#bateria.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(name="bateria")
                             option(value="") - Seleccione  
                             each bateria in baterias
                                option(value=bateria.nombre selected= datos.bateria ? datos.bateria == bateria.nombre ? true : false : null)= bateria.nombre                                

                   div(class="md:flex md:gap-4 space-y-5 md:space-y-0") 

                        div(class="md:w-1/3 ")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="sistemaOperativoId") Sistema Operativo
                            select#sistemaOperativoId.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(name="sistemaOperativoId")
                             option(value="") - Seleccione -
                             each sistema in sistemas
                                option(value=sistema.id selected= datos.sistemaOperativoId? datos.sistemaOperativoId == sistema.id ? true : false : null)= sistema.nombre
                        div(class="md:w-1/3 ")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="marcastytId") Marca
                            select#marcastytId.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(name="marcastytId")
                             option(value="") - Seleccione
                             each marca in marcas
                                option(value=marca.id selected= datos.marcastytId ? datos.marcastytId == marca.id ? true : false : null)= marca.nombre                    
                        div(class="md:w-1/3 ")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="tiendaId") tienda
                            select#tiendaId.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(name="tiendaId")
                             option(value="") - Seleccione  
                             each tienda in tiendas
                                option(value=tienda.id selected= datos.tiendaId ? datos.tiendaId == tienda.id  ? true : false : null)= tienda.nombre                    
               input(class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Guardar Cambios")  